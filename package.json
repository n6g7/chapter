{
  "name": "chapter",
  "version": "0.4.0",
  "description": "Digital library for physical books",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.config.js",
    "dev": "webpack-dashboard -- webpack-dev-server",
    "pretest": "eslint src test --ext js,jsx",
    "snyk": "snyk test",
    "test": "jest"
  },
  "keywords": [
    "book",
    "library",
    "chapter"
  ],
  "author": "Nathan G <n6g7@gnab.fr>",
  "homepage": "https://github.com/n6g7/chapter",
  "license": "MIT",
  "dependencies": {
    "color": "^1.0.3",
    "firebase": "^3.6.6",
    "highcharts": "^v5.0.7",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-datepicker": "^0.39.0",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^16.0.0",
    "react-highcharts": "^11.5.0",
    "react-input-mask": "^0.7.5",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.1",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-immutable": "^3.0.10",
    "redux-localstorage": "^0.4.1",
    "redux-saga": "^0.14.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "chokidar": "^1.6.1",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "img-loader": "^1.3.1",
    "jest": "^18.1.0",
    "react-hot-loader": "^1.3.1",
    "snyk": "^1.24.4",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^1.16.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "Promise": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-constant-condition": "off"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 3,
        "functions": 3,
        "lines": 3,
        "statements": 3
      }
    },
    "moduleNameMapper": {
      "config": "<rootDir>./test/config.js"
    }
  },
  "repository": {
    "url": "git@github.com:n6g7/chapter.git",
    "type": "git"
  }
}
