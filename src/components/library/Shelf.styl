@import '../vars.styl';

book-space = 15px
header-opacity = 0.8
shelf-padding = 40px

section.shelf
  position: relative
  width 100%

  header
    align-items center
    background: alpha(white, header-opacity)
    display flex
    flex-flow row nowrap
    justify-content flex-start
    margin-top: (shelf-padding / 2)
    padding: (shelf-padding / 2) shelf-padding (shelf-padding / 2)
    position: sticky
    top: headerHeight
    z-index: 50

    h2
      margin-right 20px

    nav ul
      display flex
      flex-flow row nowrap
      list-style none
      margin 0
      padding 0

      li
        margin-right: book-space

  & > ul
    display flex
    flex-flow row wrap
    list-style none
    margin 0 shelf-padding shelf-padding
    padding 0

    li
      margin 0 book-space book-space 0

  &:nth-child(odd)
    background lightGray

    header
      background: alpha(lightGray, header-opacity)

  &.hide
    display none
