@import '../vars.styl';

book-spacing = 10px
vertical-spacing = 20px

section.shelf
  display: flex
  flex-flow: row nowrap
  padding: 30px vertical-spacing
  position: relative
  width 100%

  nav
    align-items: center
    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    margin-right: vertical-spacing
    width: vertical-spacing

    h2
      color: alpha(#2c3e50, 0.5)
      font-size: 1.5rem
      transform: rotate(180deg)
      writing-mode: vertical-lr

    span
      color: alpha(#2c3e50, 0.5)
      flex-grow: 1
      margin: (vertical-spacing/2) 0
      text-align: right
      transform: rotate(180deg)
      writing-mode: vertical-lr

    a img
      height: vertical-spacing
      width: vertical-spacing

  ul
    display: flex
    flex-flow: row wrap
    list-style: none
    margin: 0 0 (- book-spacing)
    padding: 0

    li
      margin-bottom: book-spacing
      margin-right: book-spacing

      &:last-child
        margin-right: 0

  &:nth-child(odd)
    background: lightGray

  &.hide
    display: none
