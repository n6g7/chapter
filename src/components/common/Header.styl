@import '../vars.styl';

.chapter > header
  align-items center
  background blueDark
  color white
  display flex
  height headerHeight
  flex-flow row nowrap
  justify-content space-between
  left 0
  padding: 0 40px
  position fixed
  top 0
  right 0
  z-index: 100

  .title
    align-items: baseline
    display: flex
    flex-flow: row nowrap

    h1
      margin 0
      font-size 3rem
      margin-right: 10px
      text-align: center

      a
        color: inherit
        display: block

    & > a
      color white
      display block
      margin 5px 0
      opacity 0.3
      text-align center

      &:hover
        text-decoration underline

  .loader
    opacity: 0.5

  nav
    ul
      align-items center
      display flex
      flex-flow row nowrap
      list-style none
      margin 0
      padding 0
