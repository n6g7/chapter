@import './vars.styl';

book-space = 15px

section.shelf
  padding 40px
  width 100%

  header
    align-items center
    display flex
    flex-flow row nowrap
    justify-content flex-start
    margin-bottom 20px
    padding 0

    h2
      margin-right 20px

    nav ul
      display flex
      flex-flow row nowrap
      list-style none
      margin 0
      padding 0

  & > ul
    display flex
    flex-flow row wrap
    list-style none
    margin 0 0 (- book-space)
    padding 0

    li
      margin 0 book-space book-space 0

  &:nth-child(odd)
    background lightGray

  &.hide
    display none
