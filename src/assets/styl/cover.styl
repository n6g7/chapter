@import './vars.styl';

article.cover
  align-items center
  display flex
  height coverHeight
  justify-content center
  width coverWidth

  img
    width coverWidth - 40px

article.detailedCover
  height detailedCoverHeight
  overflow hidden
  position relative
  width detailedCoverWidth

  img
    display block
    height detailedCoverHeight
    left 33px
    object-fit contain
    position absolute
    top 0
    width 160px
    z-index 15

  .description
    angled-before(blueDark, detailedCoverHeight)
    background blueDark
    bottom 0
    color white
    padding 40px 10px 40px 60px
    position absolute
    right 0
    top 0
    width 330px
    z-index 10

    h3
      font-size 1.8rem

    p
      opacity 0.8

    .startDate
      margin-top 30px
      opacity 0.4

    .progressbar
      bottom 30px
      position absolute
