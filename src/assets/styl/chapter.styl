@import './vars.styl';
@import url(https://fonts.googleapis.com/css?family=Karla:400,700);

*
  box-sizing border-box

a
  color #3498db
  text-decoration none

h1, h2, h3
  font-weight normal
  margin 0

html
  font-size 62.5%

body
  background blue
  color white
  font-family Karla, sans-serif
  font-size 1.4rem
  margin 0
  padding 0

header
  sidebox(blue, blueDark, 104px)
  padding-bottom 40px
  padding-top 40px

  h1
    display inline-block
    font-size 2rem

  nav
    display flex
    flex-flow row nowrap
    float right

footer
  sidebox(blue, blueDark, 57px)
  opacity 0.8
