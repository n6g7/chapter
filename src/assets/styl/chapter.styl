@import './vars.styl';
@import url(https://fonts.googleapis.com/css?family=Karla:400,700);

*
  box-sizing border-box

a
  color #3498db
  text-decoration none

h1, h2, h3
  font-weight normal
  margin 0

.button
  background cyan
  border none
  color white
  cursor default
  display inline-block
  line-height buttonHeight
  font-size 1.4rem
  padding 0 6px
  position relative
  height buttonHeight
  text-align center

  .icon
    background cyanDark
    flex-shrink 0
    font-size 2.2rem
    height buttonHeight
    line-height buttonHeight
    margin 0
    position absolute
    top 0
    left 0
    text-align center
    transition 0.5s
    width 100%

    & + span
      padding-left buttonHeight

  &:hover .icon
    width buttonHeight

input, select
  background cyanDark
  border none
  color rgba(255, 255, 255, 0.5)
  font-size 1.2rem
  height 40px
  padding 5px 10px

html
  font-size 62.5%

body
  background blue
  color white
  font-family Karla, sans-serif
  font-size 1.4rem
  margin 0
  padding 0

header
  sidebox(blue, blueDark, headerHeight)
  height headerHeight
  padding-bottom 40px
  padding-top 40px

  h1
    display inline-block
    font-size 2.2rem
    height headerHeight - 80px
    line-height headerHeight - 80px

  p
    margin 0
    opacity 0.6
    position absolute
    top 25px

  .back
    color rgba(255, 255, 255, 0.7)
    font-size 2rem
    left 0
    position absolute
    top ((headerHeight - buttonHeight) / 2)
    width buttonHeight

  nav
    display flex
    flex-flow row nowrap
    position absolute
    right 60px
    top ((headerHeight - buttonHeight) / 2)

    & > *
      margin-left 10px

footer
  sidebox(blue, blueDark, 57px)
  opacity 0.8
